<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

      <div class="row">

          <div class="col-xs-9">
               <div class="header page-header"><h2>Blog Rails</h2></div>
          </div>

           <div class="col-xs3 col-sm-3 col-md-3 col-lg-3 padding">
            <% if user_signed_in? %>

              <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8 padding">
                 <div class="user-name">
                  <strong><%= current_user.email %></strong>
                   <p><%= link_to "Sign out", destroy_user_session_path, method: :delete%> </p>
                   </div>
               </div>
               <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4 padding">
                  <%= image_tag(Gravatar.new(current_user.email).image_url+"?s=50", class:"img-circle avatar-comments") %>
               </div>

            <% else %>

                   <div class="panel-login">
                   <%= link_to "Sign up ", new_user_registration_path %> |
                   <%= link_to " Sign in", new_user_session_path, remote: true %>
                   </div>
            <% end %>
          </div>
        </div>
       <div class="row">
             <%= yield %>
      </div>

  </div>

</body>
</html>
