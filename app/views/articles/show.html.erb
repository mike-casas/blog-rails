<div class="col-xs-12">

<div class="article">
  <div class="row">
    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
      <div class="title"><%= @article.title %></div>
    </div>
    <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
       <div class="date"><%= @article.created_at.strftime("%B %d, %Y") %></div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3 text-center">
       <%= image_tag(Gravatar.new(@article.user.email).image_url+"?s=130", class:"img-circle") %>
       <p class="autor-name"><%= @article.user.email %></p>
    </div>
    <div class="col-xs-9 col-sm-8 col-md-8 col-lg-8">
      <div class="text"><%= @article.text.html_safe %></div>
    </div>
  </div>



    <% if current_user == @article.user %>

     <%= link_to "editar", edit_article_path(@article) %>
     <br/>
     <%= link_to "eliminar", article_path(@article), method: :delete , data:{confirm:"deseas eliminar"} %>
      <% end %>
</div>

</div>

 <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

  <div class="title">comments:</div>
    <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="article">
        <div class="comments-text">

        <%= render @article.comments %>
        </div>
    </div>
   </div>

  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">

     <div class="comments-form">

     <%= render 'comments/form' %>

     </div>

   <%= link_to 'Back', articles_path ,class:"btn btn-info"%>
  </div>
</div>


